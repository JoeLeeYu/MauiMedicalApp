<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:MauiMedicalApp.ViewModels"
             x:Class="MauiMedicalApp.Pages.SmokingRecordPage"
             Title="今日抽菸">

    <ContentPage.BindingContext>
        <vm:SmokingRecordViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- 統計 -->
            <Grid ColumnSpacing="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Frame Grid.Column="0" Padding="10" BackgroundColor="#F4F4F5">
                    <VerticalStackLayout HorizontalOptions="Center">
                        <Label Text="今日抽菸量" FontSize="14" />
                        <Label Text="{Binding SmokeCountText}"
                               FontAttributes="Bold" FontSize="22"/>
                    </VerticalStackLayout>
                </Frame>

                <Frame Grid.Column="1" Padding="10" BackgroundColor="#F4F4F5">
                    <VerticalStackLayout HorizontalOptions="Center">
                        <Label Text="消耗金額" FontSize="14" />
                        <Label Text="{Binding MoneyText}"
                               FontAttributes="Bold" FontSize="22"/>
                    </VerticalStackLayout>
                </Frame>

                <Frame Grid.Column="2" Padding="10" BackgroundColor="#F4F4F5">
                    <VerticalStackLayout HorizontalOptions="Center">
                        <Label Text="焦油量" FontSize="14" />
                        <Label Text="{Binding TarText}"
                               FontAttributes="Bold" FontSize="22"/>
                    </VerticalStackLayout>
                </Frame>
            </Grid>

            <!-- Tar Picker -->
            <HorizontalStackLayout Spacing="10" VerticalOptions="Center">
                <Label Text="每支焦油 (mg)" VerticalTextAlignment="Center" />
                <Picker ItemsSource="{Binding TarOptions}"
                        SelectedItem="{Binding TarPerCig}"
                        WidthRequest="120"/>
            </HorizontalStackLayout>

            <!-- 抽菸按鈕 -->
            <ImageButton Source="smoke123.png"
                         HeightRequest="200"
                         BackgroundColor="Transparent"
                         HorizontalOptions="Center"
                         Command="{Binding AddSmokeCommand}" />

            <!-- 查看圖表 -->
            <Button Text="查看吸菸紀錄圖表"
                    Command="{Binding ViewChartCommand}"
                    BackgroundColor="#007AFF"
                    TextColor="White"
                    CornerRadius="8"
                    HeightRequest="50"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
