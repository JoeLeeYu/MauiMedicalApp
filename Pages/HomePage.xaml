<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MauiMedicalApp.Pages.HomePage"
    BackgroundColor="#FAFAFA"
    Title="首頁">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label Text="功能選單"
                   FontSize="26"
                   FontAttributes="Bold"
                   TextColor="#111827"/>

            <Grid ColumnDefinitions="*,*"
                  RowDefinitions="Auto,Auto,Auto,Auto"
                  ColumnSpacing="20"
                  RowSpacing="20">

                <!-- ⭐ 未來健康情境模擬（Row 0，跨兩欄） -->
                <Frame Grid.Row="0"
                       Grid.ColumnSpan="2"
                       CornerRadius="24"
                       Padding="18"
                       HeightRequest="120"
                       HasShadow="True"
                       BackgroundColor="#EEF2FF">

                    <Grid ColumnDefinitions="Auto,*" ColumnSpacing="16">

                        <Image Source="future.png"
                               HeightRequest="60"
                               VerticalOptions="Center"/>

                        <VerticalStackLayout VerticalOptions="Center">
                            <Label Text="未來健康情境模擬"
                                   FontSize="18"
                                   FontAttributes="Bold"
                                   TextColor="#1E3A8A"/>

                            <Label Text="模擬不同生活型態對未來健康風險的影響"
                                   FontSize="13"
                                   TextColor="#475569"/>
                        </VerticalStackLayout>
                    </Grid>

                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding GoHealthSimulationCommand}"/>
                    </Frame.GestureRecognizers>
                </Frame>

                <!-- Row 1 -->
                <Frame Grid.Row="1" Grid.Column="0"
                       CornerRadius="20"
                       BackgroundColor="White"
                       Padding="15"
                       HeightRequest="140"
                       HasShadow="True">
                    <VerticalStackLayout HorizontalOptions="Center"
                                         VerticalOptions="Center">
                        <Image Source="check.png" HeightRequest="60"/>
                        <Label Text="健康建議" FontSize="16"/>
                    </VerticalStackLayout>
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding GoHealthAdviceCommand}"/>
                    </Frame.GestureRecognizers>
                </Frame>

                <Frame Grid.Row="1" Grid.Column="1"
                       CornerRadius="20"
                       BackgroundColor="White"
                       Padding="15"
                       HeightRequest="140"
                       HasShadow="True">
                    <VerticalStackLayout HorizontalOptions="Center"
                                         VerticalOptions="Center">
                        <Image Source="predict.png" HeightRequest="60"/>
                        <Label Text="風險預測" FontSize="16"/>
                    </VerticalStackLayout>
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding GoRiskPredictCommand}"/>
                    </Frame.GestureRecognizers>
                </Frame>

                <!-- Row 2 -->
                <Frame Grid.Row="2" Grid.Column="0"
                       CornerRadius="20"
                       BackgroundColor="White"
                       Padding="15"
                       HeightRequest="140"
                       HasShadow="True">
                    <VerticalStackLayout HorizontalOptions="Center"
                                         VerticalOptions="Center">
                        <Image Source="image.png" HeightRequest="60"/>
                        <Label Text="CT影像辨識" FontSize="16"/>
                    </VerticalStackLayout>
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding GoImagePredictCommand}"/>
                    </Frame.GestureRecognizers>
                </Frame>

                <Frame Grid.Row="2" Grid.Column="1"
                       CornerRadius="20"
                       BackgroundColor="White"
                       Padding="15"
                       HeightRequest="140"
                       HasShadow="True">
                    <VerticalStackLayout HorizontalOptions="Center"
                                         VerticalOptions="Center">
                        <Image Source="smoke123.png" HeightRequest="60"/>
                        <Label Text="抽菸紀錄" FontSize="16"/>
                    </VerticalStackLayout>
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding GoSmokingRecordCommand}"/>
                    </Frame.GestureRecognizers>
                </Frame>

                <!-- Row 3 -->
                <Frame Grid.Row="3" Grid.Column="0"
                       CornerRadius="20"
                       BackgroundColor="White"
                       Padding="15"
                       HeightRequest="140"
                       HasShadow="True">
                    <VerticalStackLayout HorizontalOptions="Center"
                                         VerticalOptions="Center">
                        <Image Source="diet.png" HeightRequest="60"/>
                        <Label Text="飲食紀錄" FontSize="16"/>
                    </VerticalStackLayout>
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding GoDietRecordCommand}"/>
                    </Frame.GestureRecognizers>
                </Frame>

                <Frame Grid.Row="3" Grid.Column="1"
                       CornerRadius="20"
                       BackgroundColor="White"
                       Padding="15"
                       HeightRequest="140"
                       HasShadow="True">
                    <VerticalStackLayout HorizontalOptions="Center"
                                         VerticalOptions="Center">
                        <Image Source="sport.png" HeightRequest="60"/>
                        <Label Text="運動紀錄" FontSize="16"/>
                    </VerticalStackLayout>
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding GoSportRecordCommand}"/>
                    </Frame.GestureRecognizers>
                </Frame>

            </Grid>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
